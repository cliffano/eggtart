      }
    },
    "rename": {
      "endpoint": "tags/rename",
      "args": {
        "old": ["required", "string"],
        "new": ["required", "string"]
      }
    }
  },
  "tagBundles": {
  	"all": {
      "endpoint": "tags/bundles/all",
      "args": {
        "bundle": ["string"]
      }
  	},
  	"set": {
      "endpoint": "tags/bundles/set",
      "args": {
        "bundle": ["required", "string"],
        "tags": ["required", "string"]
      }
  	},
  	"delete": {
      "endpoint": "tags/bundles/delete",
      "args": {
        "bundle": ["required", "string"]
