{
  "posts": {
    "update": {
      "endpoint": "posts/update",
      "args": {}
    },
    "add": {
      "endpoint": "posts/add",
      "args": {
        "url": ["required", "url"],
        "description": ["required", "string"],
        "extended": ["string"],
        "tags": ["string"],
        "dt": ["date"],
        "replace": ["no"],
        "shared": ["no"]
      }
    },
    "delete": {
      "endpoint": "posts/delete",
      "args": {
        "url": ["required", "url"]
      }
    },
    "get": {
      "endpoint": "posts/get",
      "args": {
        "tag": ["string"],
        "dt": ["date"],
        "url": ["url"],
        "hashes": ["string"],
        "meta": ["yes"]
      }
    },
    "recent": {
      "endpoint": "posts/recent",
      "args": {
        "tag": ["string"],
        "count": ["number", "min_1", "max_100"]
      }
    },
    "dates": {
      "endpoint": "posts/dates",
      "args": {
        "tag": ["string"]
      }
    },
    "all": {
      "endpoint": "posts/all",
      "args": {
        "tag": ["string"],
        "start": ["number"],
        "results": ["number"],
        "fromdt": ["date"],
        "todt": ["date"],
        "meta": ["yes"],
        "hashes": ["novalue"]
      }
    },
    "suggest": {
      "endpoint": "posts/suggest",
      "args": {
        "url": ["required"]
      }
    }
  },
  "tags": {
  	"get": {
      "endpoint": "tags/get",
      "args": {}
  	},
    "delete": {
      "endpoint": "tags/delete",
      "args": {
